    <!-- Tableau Embedding API v3 -->
    <script type="module" src="https://public.tableau.com/javascripts/api/tableau.embedding.3.latest.min.js"></script>
    <script type="module">
        // Initialize Tableau Dashboard 1
        try {
            const viz1 = document.getElementById('tableau-viz1');
            const tableauViz1 = document.createElement('tableau-viz');
            tableauViz1.setAttribute('id', 'tableauViz1');
            tableauViz1.setAttribute('src', 'https://public.tableau.com/views/work_17530294471900/Sheet4?:language=en-US&:embed=y&:toolbar=n&:tabs=n');
            tableauViz1.setAttribute('width', '100%');
            tableauViz1.setAttribute('height', '600');
            viz1.appendChild(tableauViz1);
        } catch (error) {
            console.error('Error loading Tableau Dashboard 1:', error);
            document.getElementById('tableau-viz1').innerHTML = '<p>שגיאה בטעינת הדשבורד. אנא ודאו שהדשבורד ציבורי וזמין.</p>';
        }

        // Initialize Tableau Dashboard 2
        try {
            const viz2 = document.getElementById('tableau-viz2');
            const tableauViz2 = document.createElement('tableau-viz');
            tableauViz2.setAttribute('id', 'tableauViz2');
            tableauViz2.setAttribute('src', 'https://public.tableau.com/views/work2_17530301399520/Sheet3?:language=en-US&:embed=y&:toolbar=n&:tabs=n');
            tableauViz2.setAttribute('width', '100%');
            tableauViz2.setAttribute('height', '600');
            viz2.appendChild(tableauViz2);
        } catch (error) {
            console.error('Error loading Tableau Dashboard 2:', error);
            document.getElementById('tableau-viz2').innerHTML = '<p>שגיאה בטעינת הדשבורד. אנא ודאו שהדשבורד ציבורי וזמין.</p>';
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const sectionId = this.getAttribute('href');
                document.querySelector(sectionId).scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Alert for fun interaction
        window.onload = function() {
            setTimeout(() => {
                alert('ברוכים הבאים למרכז ניתוח הנתונים של המרכז האקדמי פרס! 🎉 גלו תובנות מדשבורדים אינטראקטיביים!');
            }, 1000);
        };
    </script>
