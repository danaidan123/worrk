    <!-- Tableau Embedding API v3 -->
    <script type="module" src="https://public.tableau.com/javascripts/api/tableau.embedding.3.latest.min.js"></script>
    <script type="module">
        // Function to initialize Tableau Viz with error handling
        function initializeViz(containerId, url, vizId) {
            try {
                const container = document.getElementById(containerId);
                const tableauViz = document.createElement('tableau-viz');
                tableauViz.setAttribute('id', vizId);
                tableauViz.setAttribute('src', url);
                tableauViz.setAttribute('width', '100%');
                tableauViz.setAttribute('height', '600');
                tableauViz.setAttribute('toolbar', 'hidden');
                tableauViz.setAttribute('hide-tabs', 'true');
                container.appendChild(tableauViz);

                // Add event listener for errors
                tableauViz.addEventListener('vizloaderror', (e) => {
                    console.error(`Error loading Tableau Viz ${vizId}:`, e.detail);
                    container.innerHTML = `<div class="error-message">×©×’×™××” ×‘×˜×¢×™× ×ª ×”×“×©×‘×•×¨×“: ${e.detail.message}. ×× × ×•×“××• ×©×”×“×©×‘×•×¨×“ ×–××™×Ÿ ×•×¦×™×‘×•×¨×™ ×‘-Tableau Public.</div>`;
                });
            } catch (error) {
                console.error(`Error initializing Tableau Viz ${vizId}:`, error);
                document.getElementById(containerId).innerHTML = '<div class="error-message">×©×’×™××” ×‘×˜×¢×™× ×ª ×”×“×©×‘×•×¨×“. ×× × ×•×“××• ×©×”×“×©×‘×•×¨×“ ×¦×™×‘×•×¨×™ ×•×–××™×Ÿ.</div>';
            }
        }

        // Initialize Tableau Dashboard 1
        initializeViz('tableau-viz1', 'https://public.tableau.com/views/work_17530294471900/Sheet4?:language=en-US&:embed=y&:toolbar=n&:tabs=n', 'tableauViz1');

        // Initialize Tableau Dashboard 2
        initializeViz('tableau-viz2', 'https://public.tableau.com/views/work2_17530301399520/Sheet3?:language=en-US&:embed=y&:toolbar=n&:tabs=n', 'tableauViz2');

        // Smooth scrolling for navigation links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const sectionId = this.getAttribute('href');
                document.querySelector(sectionId).scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Alert for fun interaction
        window Loaded = function() {
            setTimeout(() => {
                alert('×‘×¨×•×›×™× ×”×‘××™× ×œ××¨×›×– × ×™×ª×•×— ×”× ×ª×•× ×™× ×©×œ ×”××¨×›×– ×”××§×“××™ ×¤×¨×¡! ğŸ‰ ×’×œ×• ×ª×•×‘× ×•×ª ××“×©×‘×•×¨×“×™× ××™× ×˜×¨××§×˜×™×‘×™×™×!');
            }, 1000);
        };
    </script>
